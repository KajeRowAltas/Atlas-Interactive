MONGODB_URI=mongodb://mongo:27017
DB_NAME=atlas_interactive

# Bitget (futures) trading bot
# Keep real values in backend/.env (do not commit).
BITGET_API_KEY=
BITGET_SECRET_KEY=
BITGET_PASSPHRASE=

# Required to control the bot from Atlas (REST + WS).
# Generate one via: `python -m scripts.generate_trading_token`
ATLAS_TRADING_TOKEN=

# Troubleshooting (optional): returns more specific 401 reasons (still no secrets).
ATLAS_TRADING_DEBUG=false

# Safety gate: bot refuses live trading unless enabled explicitly.
ATLAS_TRADING_LIVE=false
